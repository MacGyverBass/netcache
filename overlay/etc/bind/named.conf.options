options {
        directory "/var/cache/bind";
        dnssec-validation ${DNSSEC_VALIDATION};
        auth-nxdomain no;    # conform to RFC1035
        allow-recursion { any; };
        allow-query { any; };
        allow-query-cache { any; };
        listen-on { any; };
        listen-on-v6 { any; };
        forwarders { ${DNS_NAMESERVERS}; };
};

